{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",      /* Ensure that casing is correct in imports. */                                    /* Enable all strict type-checking options. */
    "paths": {
        "*": [
            "node_modules/*"
        ]
    },
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.tsx",
    "sandbox/sandbox.ts",
    "node_modules/@aqac/utils"
  ],
  "exclude": [
    "node_modules"
  ]
}
