// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String  @id @default(uuid())
  user_id  String?
  name     String
  score_id String
  game_id  String
  score    Score   @relation(fields: [score_id], references: [id])
  Game     Game    @relation(fields: [game_id], references: [id])
}

model Game {
  id              String   @id @default(uuid())
  host            String
  name            String
  winner          String
  language        String
  word_amount     Int
  player_length   Int
  timer           Float?
  players         Player[]
  createdAt       DateTime? @default(now())
}

model Score {
  id              String    @id @default(uuid())
  createdAt       DateTime? @default(now())
  userId          String?
  correct_letters Int
  mpm             Int
  points          Int
  precision       Float
  total_letters   Int
  wrong_letters   Int
  wrong_words     Int
  gameId          String?
  type            String // "solo" | "multi"
  language        String?
  timer           Int?
  username        String?
  User            User?     @relation(fields: [userId], references: [id])
  Player          Player[]
}

model Settings {
  id       String  @id @default(uuid())
  language String  @default("fr") // en, fr, es, de
  fontSize Int     @default(36) // 24, 30, 36, 48, 60
  theme    Boolean @default(true) // light/true | dark/false
  sound    Boolean @default(false)
  User     User?   @relation(fields: [userId], references: [id])
  userId   String? @unique
}

model User {
  id                String       @id @default(uuid())
  email             String       @unique
  password          String
  nickname          String?      @unique
  avatar            String?
  is_active         Boolean      @default(false)
  lastPasswordReset DateTime?
  last_activity     DateTime?
  createdAt         DateTime     @default(now())
  scores            Score[]
  didacticiel_level Int?         @default(3)
  settings          Settings?
}

model WordSet {
  id      String   @id @default(uuid())
  letter  String
  level   Int
  wordSet String[]
}

