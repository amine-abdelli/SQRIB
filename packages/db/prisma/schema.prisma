generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String  @id @default(uuid())
  user_id  String?
  name     String
  score_id String
  game_id  String
  Game     Game    @relation(fields: [game_id], references: [id])
  score    Score   @relation(fields: [score_id], references: [id])
}

model Game {
  id            String    @id @default(uuid())
  host          String
  winner        String
  language      String
  name          String
  player_length Int
  word_amount   Int
  timer         Int?
  created_at    DateTime? @default(now())
  players       Player[]
}

model Score {
  id              String    @id @default(uuid())
  userId          String?
  correct_letters Int
  mpm             Int
  points          Int
  precision       Float
  total_letters   Int
  wrong_letters   Int
  wrong_words     Int
  gameId          String?
  type            String
  language        String?
  timer           Int?
  username        String?
  created_at      DateTime? @default(now())
  User            User?     @relation(fields: [userId], references: [id])
  Player          Player[]
}

model Settings {
  id        String  @id @default(uuid())
  language  String  @default("fr")
  sound     Boolean @default(false)
  userId    String? @unique
  theme     Boolean @default(true)
  font_size Int     @default(36)
  User      User?   @relation(fields: [userId], references: [id])
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  password            String
  nickname            String?   @unique
  avatar              String?
  last_activity       DateTime?
  is_active           Boolean   @default(false)
  created_at          DateTime  @default(now())
  didacticiel_level   Int?      @default(3)
  last_password_reset DateTime?
  scores              Score[]
  settings            Settings?
}

model WordSet {
  id       String   @id @default(uuid())
  letter   String
  level    Int
  word_set String[]
}
